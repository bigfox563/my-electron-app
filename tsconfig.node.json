{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/main/**/*.ts", "typings/**/*.d.ts"],
  "exclude": [".webpack"]
}